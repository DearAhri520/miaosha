<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ren.irenewhite.dao.GoodInfoDao">
    <resultMap id="BaseResultMap" type="ren.irenewhite.pojo.GoodInfo">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="goods_name" jdbcType="VARCHAR" property="goodName" />
        <result column="goods_title" jdbcType="VARCHAR" property="goodTitle" />
        <result column="goods_img" jdbcType="VARCHAR" property="goodImg" />
        <result column="goods_detail" jdbcType="VARCHAR" property="goodDetail" />
        <result column="goods_price" jdbcType="DECIMAL" property="goodPrice" />
        <result column="goods_stock" jdbcType="INTEGER" property="goodStock" />
        <result column="sniping_price" jdbcType="DECIMAL" property="snipingPrice" />
        <result column="sniping_stock_count" jdbcType="INTEGER" property="snipingStockCount" />
        <result column="start_time" jdbcType="DATE" property="startTime" />
        <result column="end_time" jdbcType="DATE" property="endTime" />
    </resultMap>
    <select id="getGoodsInfo" resultType="ren.irenewhite.pojo.GoodInfo">
        select goods.*,sg.sniping_price,sg.sniping_stock_count,sg.start_time,sg.end_time from sniping_goods sg left join goods on sg.id = goods.id
    </select>
    <select id="getGoodInfoById" parameterType="long" resultType="ren.irenewhite.pojo.GoodInfo">
        select goods.*,sg.sniping_price,sniping_stock_count,sg.start_time,sg.end_time from sniping_goods sg left join goods on sg.id = goods.id where goods.id = #{id}
    </select>
</mapper>